{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "probe_rs debug",
            "type": "probe-rs-debug",
            // "request": "attach",
            "request": "launch",
            "flashingConfig": {
                "flashingEnabled": true,
                "verifyBeforeFlashing": true,
                "verifyAfterFlashing": true,
            },
            "preLaunchTask": "build",
            "chip": "STM32F103C8",
            "coreConfigs": [
                {
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            "dataFormat": "Defmt",
                            "showLocation": true,
                            "showTimestamps": true
                        }
                    ],
                    "svdFile": "STM32F103.svd",
                    "programBinary": "target/thumbv7m-none-eabi/debug/f103c8"
                }
            ]
        },
        {
            "name": "ST-Link Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stlink",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "STM32F103.svd",
            "preLaunchTask": "build",
            "device": "STM32F103C8",
            "executable": "target/thumbv7m-none-eabi/debug/f103c8"
        },
        {
            "name": "J-Link Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "STM32F103.svd",
            "preLaunchTask": "build",
            "device": "STM32F103C8",
            "executable": "target/thumbv7m-none-eabi/debug/f103c8"
        }
    ]
